<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:background="@color/surfaceColor"
    android:layout_height="match_parent"
    tools:context=".FirestoreExample">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/title"
        android:inputType="text"
        android:hint="Enter Title"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/description"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:hint="Enter Description"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Save"
        android:backgroundTint="@color/secondaryColor"
        android:id="@+id/save"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Load"
        android:id="@+id/load"
        android:backgroundTint="@color/secondaryColor"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Update Description"
        android:id="@+id/update"
        android:backgroundTint="@color/secondaryColor"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Delete Description"
        android:id="@+id/deleteDesc"
        android:backgroundTint="@color/secondaryColor"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Delete Book"
        android:id="@+id/deleteDocument"
        android:backgroundTint="@color/secondaryColor"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Add Book"
        android:id="@+id/addBook"
        android:backgroundTint="@color/secondaryColor"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:text="Load All Books Document"
        android:id="@+id/loadBooks"
        android:backgroundTint="@color/secondaryColor"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/detail"
        android:layout_height="wrap_content"/>

</LinearLayout>