<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="7dp"
    android:background="@drawable/address_half_bg">

    <RelativeLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:fontFamily="@font/montserrat_black"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/delete"
            android:layout_toEndOf="@+id/icon"
            android:id="@+id/infoView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/areaName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/average_sans"
                android:text="Haider Garden"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/houseStreetNearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Haider Garden"
                android:textSize="14sp" />
        </LinearLayout>

        <com.ornach.nobobutton.NoboButton
            android:id="@+id/delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="3dp"
            android:paddingTop="1dp"
            android:paddingEnd="4dp"
            android:paddingBottom="1dp"
            app:nb_backgroundColor="@color/transparent"
            app:nb_drawableResource="@drawable/ic_baseline_delete_24"
            app:nb_iconPadding="5dp"
            app:nb_radius="5dp"
            app:nb_text=""
            app:nb_textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>